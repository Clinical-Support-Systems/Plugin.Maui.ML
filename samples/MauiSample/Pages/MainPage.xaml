<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    x:Class="MauiSample.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MauiSample.Pages.Controls"
    xmlns:models="clr-namespace:MauiSample.Models"
    xmlns:pageModels="clr-namespace:MauiSample.PageModels"
    xmlns:pullToRefresh="clr-namespace:Syncfusion.Maui.Toolkit.PullToRefresh;assembly=Syncfusion.Maui.Toolkit"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="OverviewPage"
    Title="{Binding Today}"
    x:DataType="pageModels:MainPageModel">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            BindingContext="{Binding Path=BindingContext, Source={x:Reference OverviewPage}, x:DataType=ContentPage}"
            Command="{Binding NavigatedToCommand}"
            EventName="NavigatedTo" />
        <toolkit:EventToCommandBehavior
            BindingContext="{Binding Path=BindingContext, Source={x:Reference OverviewPage}, x:DataType=ContentPage}"
            Command="{Binding NavigatedFromCommand}"
            EventName="NavigatedFrom" />
        <toolkit:EventToCommandBehavior
            BindingContext="{Binding Path=BindingContext, Source={x:Reference OverviewPage}, x:DataType=ContentPage}"
            Command="{Binding AppearingCommand}"
            EventName="Appearing" />
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <pullToRefresh:SfPullToRefresh IsRefreshing="{Binding IsRefreshing}" RefreshCommand="{Binding RefreshCommand}">
            <pullToRefresh:SfPullToRefresh.PullableContent>
                <ScrollView>
                    <VerticalStackLayout Padding="{StaticResource LayoutPadding}"
                                         Spacing="{StaticResource LayoutSpacing}">
                        <!--  ML Q&A Section  -->
                        <Border
                            Padding="12"
                            BackgroundColor="{AppThemeBinding Light=#1E1E1E,
                            Dark=#2C2C2C}"
                            Stroke="{AppThemeBinding Light=#333,
                            Dark=#444}"
                            StrokeShape="RoundRectangle 12"
                            StrokeThickness="1">
                            <VerticalStackLayout Spacing="8">
                                <Label Style="{StaticResource Title2}" Text="Ask the Model" />
                                <Entry Placeholder="Type your question" Text="{Binding Question}" />
                                <Button
                                    Command="{Binding AskQuestionCommand}"
                                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                                    Text="Ask" />
                                <Label LineBreakMode="WordWrap" Text="{Binding Answer}" />
                            </VerticalStackLayout>
                        </Border>

                        <controls:CategoryChart />
                        <Label Style="{StaticResource Title2}" Text="Projects" />
                        <ScrollView Margin="-30,0" Orientation="Horizontal">
                            <HorizontalStackLayout
                                Padding="30,0"
                                BindableLayout.ItemsSource="{Binding Projects}"
                                Spacing="15">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="models:Project">
                                        <controls:ProjectCardView WidthRequest="200">
                                            <controls:ProjectCardView.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding NavigateToProjectCommand, Source={RelativeSource AncestorType={x:Type pageModels:MainPageModel}}, x:DataType=pageModels:MainPageModel}"
                                                    CommandParameter="{Binding .}" />
                                            </controls:ProjectCardView.GestureRecognizers>
                                        </controls:ProjectCardView>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </HorizontalStackLayout>
                        </ScrollView>
                        <Grid HeightRequest="44">
                            <Label
                                Style="{StaticResource Title2}"
                                Text="Tasks"
                                VerticalOptions="Center" />
                            <ImageButton
                                Aspect="Center"
                                Command="{Binding CleanTasksCommand}"
                                HeightRequest="44"
                                HorizontalOptions="End"
                                IsVisible="{Binding HasCompletedTasks}"
                                SemanticProperties.Description="Clean tasks"
                                Source="{StaticResource IconClean}"
                                VerticalOptions="Center"
                                WidthRequest="44" />
                        </Grid>
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Tasks}" Spacing="15">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <controls:TaskView
                                        TaskCompletedCommand="{Binding TaskCompletedCommand, Source={RelativeSource AncestorType={x:Type pageModels:MainPageModel}}, x:DataType=pageModels:MainPageModel}" />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>
            </pullToRefresh:SfPullToRefresh.PullableContent>
        </pullToRefresh:SfPullToRefresh>

        <controls:AddButton Command="{Binding AddTaskCommand}"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />
    </Grid>
</ContentPage>