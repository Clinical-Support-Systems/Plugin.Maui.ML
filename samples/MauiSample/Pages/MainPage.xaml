<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="MauiSample.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MauiSample.Models"
    xmlns:pageModels="clr-namespace:MauiSample.PageModels"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="OverviewPage"
    Title="{Binding Today}"
    x:DataType="pageModels:MainPageModel">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            BindingContext="{Binding Path=BindingContext, Source={x:Reference OverviewPage}, x:DataType=ContentPage}"
            Command="{Binding AppearingCommand}"
            EventName="Appearing" />
    </ContentPage.Behaviors>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label
                FontAttributes="Bold"
                FontSize="24"
                Text="Medical Entity Extraction" />

            <Label
                FontSize="14"
                Text="{Binding MedicalStatus}"
                TextColor="Gray" />

            <!--  Show loading indicators for general model and medical NLP initialization  -->
            <Grid
                ColumnDefinitions="Auto,*"
                ColumnSpacing="8"
                IsVisible="{Binding IsModelLoading}"
                RowDefinitions="Auto,Auto">
                <ActivityIndicator Grid.RowSpan="2" IsRunning="True" />
                <Label
                    Grid.Column="1"
                    FontSize="12"
                    Text="Loading general model..."
                    VerticalOptions="Center" />
            </Grid>
            <Grid
                ColumnDefinitions="Auto,*"
                ColumnSpacing="8"
                IsVisible="{Binding IsMedicalNlpLoading}"
                RowDefinitions="Auto,Auto">
                <ActivityIndicator Grid.RowSpan="2" IsRunning="True" />
                <Label
                    Grid.Column="1"
                    FontSize="12"
                    Text="Preparing medical NLP model..."
                    VerticalOptions="Center" />
            </Grid>

            <Editor
                AutoSize="TextChanges"
                HeightRequest="120"
                Placeholder="Enter medical text from transcription..."
                Text="{Binding MedicalText}" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button
                    Grid.Column="0"
                    BackgroundColor="{StaticResource PrimaryDark}"
                    Command="{Binding ExtractMedicalEntitiesCommand}"
                    Text="Extract Entities"
                    TextColor="{StaticResource PrimaryDarkText}" />
                <Button
                    Grid.Column="1"
                    BackgroundColor="{StaticResource Secondary}"
                    Command="{Binding TestMedicalSampleCommand}"
                    Text="Test Sample"
                    TextColor="{StaticResource SecondaryDarkText}" />
            </Grid>

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                FontSize="18"
                IsVisible="{Binding ExtractedEntities.Count}"
                Text="Extracted Entities:" />

            <CollectionView ItemsSource="{Binding ExtractedEntities}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:MedicalEntity">
                        <Border
                            Margin="0,5"
                            Padding="10"
                            Stroke="LightGray">
                            <StackLayout>
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                Text="{Binding EntityType}" />
                                            <Span Text=": " />
                                            <Span Text="{Binding Text}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label
                                    FontSize="12"
                                    Text="{Binding Confidence, StringFormat='Confidence: {0:P1}'}"
                                    TextColor="Gray" />
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>